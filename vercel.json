{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/.next" } },
    { "src": "server/src/server.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "server/src/server.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
